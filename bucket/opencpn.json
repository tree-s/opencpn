    "installer": {
        "script": [
            "7z x \"$dir\\OpenCPN_${version}_setup.exe\" -o\"$dir\" -y",
            "Remove-Item \"$dir\\OpenCPN_${version}_setup.exe\" -Force",

            "# NSIS installers usually extract to $PLUGINSDIR or similar",
            "Get-ChildItem \"$dir\" -Recurse | Where-Object { $_.Name -eq 'OpenCPN.exe' } | ForEach-Object { Move-Item $_.Directory.FullName\\* \"$dir\" -Force }"
        ]
    },

    "bin": "OpenCPN.exe",

    "checkver": {
        "github": "https://github.com/OpenCPN/OpenCPN",
        "regex": "Release_(?<version>[\\d.]+)"
    },

    "autoupdate": {
        "url": "https://github.com/OpenCPN/OpenCPN/releases/download/Release_$version/OpenCPN_$version_setup.exe"
    }
}
