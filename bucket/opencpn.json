    "installer": {
        "script": [
            "7z x \"$dir\\$fname\" -o\"$dir\" -y",
            "Remove-Item \"$dir\\$fname\" -Force",

            "# Flatten NSIS structure",
            "$exe = Get-ChildItem \"$dir\" -Recurse -Filter OpenCPN.exe | Select-Object -First 1",
            "Move-Item $exe.Directory.FullName\\* \"$dir\" -Force"
        ]
    },

